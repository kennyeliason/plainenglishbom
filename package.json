{
  "name": "plainenglishbom-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=web",
    "dev:mobile": "turbo dev --filter=mobile",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "parse": "tsx scripts/parse-gutenberg.ts",
    "transform": "tsx scripts/transform-text.ts",
    "transform:rules": "tsx scripts/transform-text.ts rules",
    "transform:ai": "tsx scripts/transform-text.ts ai",
    "translate": "tsx scripts/translate-to-language.ts",
    "sync-mobile-data": "tsx scripts/sync-mobile-data.ts",
    "sync-translations": "tsx scripts/sync-translations.ts",
    "generate-summaries": "tsx scripts/generate-summaries.ts",
    "book": "turbo generate --filter=@plainenglishbom/book",
    "book:pdf": "pnpm --filter @plainenglishbom/book generate:pdf",
    "book:epub": "pnpm --filter @plainenglishbom/book generate:epub"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@plainenglishbom/translations": "github:plainenglishbom/plainenglishbom-translations"
  }
}
